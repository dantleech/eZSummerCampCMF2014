{% extends "::base.html.twig" %}


{% block title %}eZ Summer Camp 2014 - Creating a Basic CMS with Routing and Routing Auto!{% endblock %}

{% block stylesheets %}
    <!-- Bootstrap Core CSS -->
    <link href="{{ asset('theme/css/bootstrap.min.css') }}" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="{{ asset('theme/css/blog-home.css' ) }}" rel="stylesheet">
{% endblock %}

{% block body %}
    {% block menu %}
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">Creating a Basic CMS with Symfony CMF</a>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    {{ knp_menu_render('main', {'currentClass': 'current', 'template': 'AcmeBasicCmsBundle::knp_menu.html.twig'} ) }}
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container -->
        </nav>
    {% endblock %}

        <!-- Page Content -->
        <div class="container">
            <div class="row header">
                <div class="col-md-6 header-left">
                </div>
                <div class="col-md-6 header-right">
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    {% block content %}
                    {% endblock %}
                </div>

                <div class="col-md-4">
                    {% block sidebar %}

                        <!-- Blog Search Well -->
                        <div class="well">
                            <h4>Blog Search</h4>
                            <div class="input-group">
                                <form method="GET" action="{{ path('search') }}">
                                    <input type="text" name="query" class="form-control">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="submit">
                                            <span class="glyphicon glyphicon-search"></span>
                                        </button>
                                    </span>
                                </form>
                            </div>
                            <!-- /.input-group -->
                        </div>

                    {% endblock %}
                </div>
            </div>

            {% block footer %}
                <hr>

                <!-- Footer -->
                <footer>
                    <div class="row">
                        <div class="col-lg-12">
                            <p>Copyright &copy; Your Website 2014</p>
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>
                    <!-- /.row -->
                </footer>
            {% endblock %}

        </div>
        <!-- /.row -->


        {% block javascripts %}
        <!-- jQuery Version 1.11.0 -->
        <script src="js/jquery-1.11.0.js"></script>

        <!-- Bootstrap Core JavaScript -->
        <script src="js/bootstrap.min.js"></script>
        {% endblock %}
        {% endblock %}
